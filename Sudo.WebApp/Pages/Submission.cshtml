@page
@{
    ViewData["Title"] = "Client Submission";
}
@model Submission
<h3>Your Client Submission Details</h3>
<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label>Firstname:</label>
        <input asp-for="Client.FirstName" class="form-control" placeholder="Enter client firstname" />
        <small class="form-text text-muted">Enter your client first name.</small>
        <span asp-validation-for="Client.FirstName"></span>
    </div>
    <div class="form-group">
        <label>Lastname:</label>
        <input asp-for="Client.LastName" class="form-control" placeholder="Enter client lastname" />
        <small class="form-text text-muted">Enter your client last name.</small>
        <span asp-validation-for="Client.LastName"></span>
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input asp-for="Client.Email" class="form-control" placeholder="Enter client email address" />
        <small class="form-text text-muted">We'll never share your email with anyone else.</small>
        <span asp-validation-for="Client.Email"></span>
    </div>
    <div class="form-check">
        <input asp-for="Client.Subscribed" class="form-check-input" type="checkbox" />
        <label class="form-check-label">Is Client has a subscription:</label>
        <small class="form-text text-muted">If your client hold a subscription to system.</small>
    </div>

    <div class="form-group">
        <label>Date Of Birth:</label>
        <input asp-for="Client.DateOfBirth" class="form-control" />
        <small class="form-text text-muted">Your client date of birth.</small>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>